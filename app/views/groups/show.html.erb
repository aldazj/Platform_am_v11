<!--  en-tête -->
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t('group.show.title') %> <small><%= t('group.show.description') %></small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i>  <%= t('group.show.title') %> </li>
      </ol>
    </div>
  </div>

  <!-- Pour récupérer des message envoyés depuis le controlleur -->
  <p id="notice"><%= notice %></p>
  <!-- On affiche le groupe et ses droits -->
  <p>
    <strong><%= t('name_label') %>:</strong>
    <%= @group.name %>
  </p>

  <p>
    <strong><%= t('right.title') %>:</strong>
  <ol>
    <% Right.all.each do |right| %>
        <div>
          <%= check_box_tag 'group[right_ids][]', right.id, right_present?(right.id)  %>
          <%= right.name %><br>
        </div>
    <% end %>
  </ol>
  </p>

  <!-- lien qui permet de modifier le groupe  -->
  <%= link_to t('group.edit.title'), edit_group_path(@group), class:'btn btn-default' %>

  <!--  Liste qui permet de voir les personnes qui appartiennent au groupe -->
  <div class="row">
      <div class="col-lg-12">
        <div id="people_belong_div">
         <%= render 'person_belongs' %>
        </div>
      </div>
    </div><!-- /.row -->

  <%= link_to t('action.back'), groups_path, class:'btn btn-default' %>
</div>



